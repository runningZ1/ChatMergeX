{
  "manifest_version": 3,
  "name": "ChatMergeX - AI Conversation Manager",
  "version": "1.0.0",
  "description": "Extract and sync conversations from ChatGPT, Doubao, Yuanbao, Gemini, and Grok",

  "permissions": [
    "activeTab",
    "storage",
    "tabs",
    "scripting",
    "background"
  ],

  "host_permissions": [
    "https://chat.openai.com/*",
    "https://chatgpt.com/*",
    "https://www.doubao.com/*",
    "https://doubao.com/*",
    "https://yuanbao.tencent.com/*",
    "https://gemini.google.com/*",
    "https://grok.x.ai/*",
    "http://localhost:3000/*",
    "https://localhost:3000/*"
  ],

  "background": {
    "service_worker": "background/service-worker.js",
    "type": "module"
  },

  "content_scripts": [
    {
      "matches": [
        "https://chat.openai.com/*",
        "https://chatgpt.com/*"
      ],
      "js": ["content-scripts/base-content-script.js", "content-scripts/chatgpt.js"],
      "run_at": "document_idle",
      "all_frames": false
    },
    {
      "matches": [
        "https://www.doubao.com/*",
        "https://doubao.com/*"
      ],
      "js": ["content-scripts/base-content-script.js", "content-scripts/doubao.js"],
      "run_at": "document_idle",
      "all_frames": false
    },
    {
      "matches": [
        "https://yuanbao.tencent.com/*"
      ],
      "js": ["content-scripts/base-content-script.js", "content-scripts/yuanbao.js"],
      "run_at": "document_idle",
      "all_frames": false
    },
    {
      "matches": [
        "https://gemini.google.com/*"
      ],
      "js": ["content-scripts/base-content-script.js", "content-scripts/gemini.js"],
      "run_at": "document_idle",
      "all_frames": false
    },
    {
      "matches": [
        "https://grok.x.ai/*"
      ],
      "js": ["content-scripts/base-content-script.js", "content-scripts/grok.js"],
      "run_at": "document_idle",
      "all_frames": false
    }
  ],

  "action": {
    "default_popup": "popup/popup.html",
    "default_title": "ChatMergeX",
    "default_icon": {
      "16": "assets/icon16.png",
      "32": "assets/icon32.png",
      "48": "assets/icon48.png",
      "128": "assets/icon128.png"
    }
  },

  "icons": {
    "16": "assets/icon16.png",
    "32": "assets/icon32.png",
    "48": "assets/icon48.png",
    "128": "assets/icon128.png"
  },

  "web_accessible_resources": [
    {
      "resources": ["assets/*"],
      "matches": ["<all_urls>"]
    }
  ],

  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'"
  },

  "externally_connectable": {
    "matches": [
      "http://localhost:3000/*",
      "https://localhost:3000/*"
    ]
  }
}